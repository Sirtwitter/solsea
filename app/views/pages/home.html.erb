          <div class="col-xs-12 col-sm-12 col-md-6 text-center">
            <%= link_to article_path(article) do %>
            <div class="post">
              <%= cl_image_tag article.photo, crop: :fill,  height: 300, width: 500, class: "img-fluid"%>
              <h2 class="title"><%= article.title %></h2>
              <p class="solsea">SolSea</p>
              <h6 class="loc"><i class="fa fa-map-pin"></i> <%= article.location %></h6>
              <br>
              <% end %>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
