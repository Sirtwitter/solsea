<div>
  <% if @article %>
  <div class="banner" style="background-image: url('<%= cl_image_path @article.photo%> ');  background-position: center; ">
    <div class="banner-content">
      <h1><%= @article.title%></h1>
      <h6 class="loc">By:</h6>
      <p class="solsea-banner">SolSea</p>
      <h6 class="loc"><i class="fa fa-map-pin"></i> <%= @article.location %></h6>
    </div>
    <% end %>
  </div>
</div>
