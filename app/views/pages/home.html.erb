<div>
  <% if @article %>
 <div class="banner" style="background-image: url('<%= cl_image_path @article.photo%> ');  background-position: center; ">
  <div class="banner-content">
    <h1><%= @article.title%></h1>
    <h6 class="loc">By:</h6>
    <p class="solsea-banner">SolSea</p>
    <h6 class="loc"><i class="fa fa-map-pin"></i> <%= @article.location %></h6>
  </div>
  <% end %>
</div>
</div>
<div class="blog">
  <hr>
  <div class="container">
    <div class="row">
      <% if @articles %>
      <% @articles.each do |article| %>
      <div class="col-xs-12 col-sm-12 col-md-6 text-center">
        <%= link_to article_path(article) do %>
        <div class="post">
          <%= cl_image_tag article.photo, crop: :fill,  height: 300, width: 500, class: "img-fluid"%>
          <h2 class="title"><%= article.title %></h2>
          <p class="solsea">SolSea</p>
          <h6 class="loc"><i class="fa fa-map-pin"></i> <%= article.location %></h6>
          <br>
          <% end %>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <hr>
</div>
